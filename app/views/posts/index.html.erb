<% @posts.each do |post| %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <div class="panel-title">
        <strong><%= link_to post.title, post %></strong>
      </div>
    </div>
    <div class="panel-body">
      <div class="panel panel-default">
        <div class="panel-body">
          <%= (post.body.truncate_words(50)).html_safe %>
        </div>
      </div>
    </div>
    <div class="panel-footer">
      <div class="row">
        <div class="col-md-6 col-xs-6"><%= post.comments.count %> Comments</div>
        <div class="col-md-6 col-xs-6 text-right"><%=	 post.created_at.strftime("%d %B %Y") %></div>
      </div>
    </div>
  </div>
<% end %>